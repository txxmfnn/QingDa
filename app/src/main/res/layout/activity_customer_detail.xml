        android:id="@+id/tv_customer_detail_family"

        android:lines="3"
        android:textSize="16sp"
        android:paddingLeft="10dp"
        app:layout_constraintTop_toBottomOf="@id/tv_customer_detail_interesting_title"
        app:layout_constraintLeft_toRightOf="@id/tv_customer_detail_condition_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_customer_detail_child_title"
        android:text="子女:"
        android:textSize="24sp"
        android:paddingLeft="10dp"
        app:layout_constraintTop_toBottomOf="@id/tv_customer_detail_family_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_customer_detail_child"
        android:text="sdfsadfggasd"
        android:lines="3"
        android:textSize="16sp"
        android:paddingLeft="10dp"
        app:layout_constraintTop_toBottomOf="@id/tv_customer_detail_family_title"
        app:layout_constraintLeft_toRightOf="@id/tv_customer_detail_condition_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_customer_detail_decision_title"
        android:text="决策:"
        android:textSize="24sp"
        android:paddingLeft="10dp"
        app:layout_constraintTop_toBottomOf="@id/tv_customer_detail_child_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_customer_detail_decision"
        android:text="sdfsadfggasd"
        android:lines="3"
        android:textSize="16sp"
        android:paddingLeft="10dp"
        app:layout_constraintTop_toBottomOf="@id/tv_customer_detail_child_title"
        app:layout_constraintLeft_toRightOf="@id/tv_customer_detail_condition_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/bt_customer_detail_add_record"
        android:onClick="toAddRecord"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:text="录入回访信息"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:text="录入回访信息" />


</android.support.constraint.ConstraintLayout>
