<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.yanz.machine.shinva.customer.CustomerDetailActivity">
    <TextView
        android:id="@+id/tv_customer_detail_name"
        android:text="cesh"
        android:textSize="24sp"
        android:textColor="@color/bg_Black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="0dp" />
    <TextView
        android:id="@+id/tv_customer_detail_age"
        android:text="nianling"
        android:textSize="24sp"
        android:paddingLeft="30dp"
        app:layout_constraintLeft_toRightOf="@id/tv_customer_detail_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_customer_detail_dept"
        android:text="柳泉路"
        android:textSize="24sp"
        android:paddingLeft="30dp"
        app:layout_constraintLeft_toRightOf="@id/tv_customer_detail_age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_customer_detail_address"
        android:text="家庭住址"
        android:textSize="24sp"
        android:paddingLeft="10dp"
        app:layout_constraintTop_toBottomOf="@id/tv_customer_detail_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_customer_detail_telephone"
        android:text="电话"
        android:textSize="24sp"
        android:paddingLeft="10dp"
        app:layout_constraintTop_toBottomOf="@id/tv_customer_detail_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_customer_detail_bir_title"
        android:text="生日:"
        android:textSize="24sp"
        android:paddingLeft="10dp"
        app:layout_constraintTop_toBottomOf="@id/tv_customer_detail_telephone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_customer_detail_bir"
        android:text="2017-10-01"
        android:textSize="24sp"
        android:paddingLeft="10dp"
        app:layout_constraintTop_toBottomOf="@id/tv_customer_detail_telephone"
        app:layout_constraintLeft_toRightOf="@id/tv_customer_detail_bir_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_customer_detail_condition_title"
        android:text="健康状况:"
        android:textSize="24sp"
        android:paddingLeft="10dp"
        app:layout_constraintTop_toBottomOf="@id/tv_customer_detail_bir_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_customer_detail_condition"
        android:text="sdfsadfggasd"
        android:lines="3"
        android:textSize="16sp"
        android:paddingLeft="10dp"
        app:layout_constraintTop_toBottomOf="@id/tv_customer_detail_bir_title"
        app:layout_constraintLeft_toRightOf="@id/tv_customer_detail_condition_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_customer_detail_mate_title"
        android:text="伴侣:"
        android:textSize="24sp"
        android:paddingLeft="10dp"
        app:layout_constraintTop_toBottomOf="@id/tv_customer_detail_condition_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_customer_detail_mate"
        android:lines="3"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/tv_customer_detail_condition_title"
        app:layout_constraintLeft_toRightOf="@id/tv_customer_detail_condition_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="laskjdfljasd;ljf;askj"/>
    <TextView
    android:id="@+id/tv_customer_detail_interesting_title"
    android:text="兴趣:"
    android:textSize="24sp"
    android:paddingLeft="10dp"
    app:layout_constraintTop_toBottomOf="@id/tv_customer_detail_mate_title"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_customer_detail_interesting"
        android:lines="3"
        android:textSize="16sp"
        android:paddingLeft="10dp"
        app:layout_constraintTop_toBottomOf="@id/tv_customer_detail_mate_title"
        app:layout_constraintLeft_toRightOf="@id/tv_customer_detail_condition_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_customer_detail_family_title"
        android:text="家庭状况:"
        android:textSize="24sp"
        android:paddingLeft="10dp"
        app:layout_constraintTop_toBottomOf="@id/tv_customer_detail_interesting_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
