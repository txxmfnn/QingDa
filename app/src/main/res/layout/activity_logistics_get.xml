<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_logistics_get"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.yanz.machine.shinva.logisticsRecive.LogisticsGetActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"

            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <Button
            android:id="@+id/btn_logistics_get_scan"
            android:text="扫描接收"
            android:layout_margin="2dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
            <Button
                android:id="@+id/btn_logistics_get_input"
                android:text="输入接收"
                android:layout_margin="2dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
            <EditText
                android:id="@+id/edt_logistics_get_input"
                android:hint="输入计划号"
                android:inputType="number"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <CheckBox
            android:id="@+id/cb_logistics_get_all"
            android:text="全选"
            android:onClick="logisticsGetAllSelect"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btn_logistics_get_fanxuan"
                android:text="反选"
                android:layout_margin="2dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

            <Button
                android:id="@+id/btn_logistics_get_cancel"
                android:visibility="gone"
                android:text="取消"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

            <Button
                android:id="@+id/btn_logistics_get_delete"
                android:text="删除所选"
                android:layout_margin="2dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
            <Button
                android:text="接收所选"
                android:onClick="logisticsGetReceive"
                android:layout_margin="2dp"
                android:id="@+id/btn_logistics_get_send"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
        </LinearLayout>


        </LinearLayout>
        <ListView
            android:id="@+id/lv_logistics_get_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </ListView>
    </LinearLayout>


</LinearLayout>
