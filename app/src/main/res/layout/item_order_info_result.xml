<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/bg_White"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_item_order_head"
            android:hint="计划号"
            android:textSize="16sp"
            android:textColor="@color/tv_Black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_item_order_outCode"
            android:paddingLeft="20dp"
            android:hint="订单号"
            android:textSize="16sp"
            android:textColor="@color/tv_Black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_item_order_maker"
            android:hint="计划员"
            android:textColor="@color/tv_Black"
            android:textSize="16sp"
            android:paddingLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_item_order_quantity"
            android:hint="数量"
            android:textColor="@color/tv_Black"
            android:textSize="16sp"
            android:paddingLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <TextView
        android:id="@+id/tv_item_order_partName"
        android:hint="图名"
        android:textSize="16sp"
        android:textColor="@color/tv_Black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_item_order_partCode"
        android:hint="图号"
        android:textSize="16sp"
        android:textColor="@color/tv_Black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_item_order_factory"
            android:hint="分厂"
            android:textSize="16sp"
            android:textColor="@color/tv_Black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_item_order_deliveryDate"
            android:hint="交货期"
            android:textColor="@color/tv_Black"
            android:textSize="16sp"
            android:paddingLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:hint="计划完工:"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_item_code_order_endDate"
            android:hint="完工日期"
            android:textSize="16sp"
            android:textColor="@color/tv_Black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>
