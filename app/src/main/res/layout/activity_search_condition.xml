<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:stretchColumns="1"
    android:background="@color/bg_White"
    tools:context="com.yanz.machine.shinva.SearchConditionActivity">

    <com.library.StickHeaderViewPager
        android:id="@+id/shvp_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:background="@android:color/white"
            >
            <TextView
                android:id="@+id/tv_stockSearch_ptd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:text="物料规格:"
                android:layout_marginBottom="5dp"
                android:textSize="18sp"
                android:textColor="@color/tv_White"/>
            <AutoCompleteTextView
                android:id="@+id/actv_StockSearch_ptd"
                android:hint="物料规格"
                android:textColor="@color/tv_Black"
                android:textSize="12sp"
                android:dropDownWidth="250dp"
                android:layout_marginLeft="20dp"
                android:layout_width="120dp"
                android:layout_marginTop="5dp"
                android:layout_height="36dp" />
            <EditText
                android:id="@+id/et_stockSearch_materialName"
                android:layout_alignTop="@id/actv_StockSearch_ptd"
                android:layout_marginLeft="20dp"
                android:hint="物料名称"
                android:textSize="12sp"
                android:layout_toRightOf="@id/actv_StockSearch_ptd"
                android:layout_width="120dp"
                android:layout_height="36dp" />

            <TextView
                android:id="@+id/tv_stockSearch_whome"
                android:layout_below="@id/actv_StockSearch_ptd"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:paddingTop="3dp"
                android:textColor="@color/tv_Black"
                android:textSize="18sp"
                android:text="仓库:"
                android:layout_alignLeft="@id/actv_StockSearch_ptd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <Button
                android:id="@+id/bn_stockSearch_whome"
                android:layout_toRightOf="@id/tv_stockSearch_whome"
                android:layout_marginLeft="10dp"
                android:layout_alignTop="@id/tv_stockSearch_whome"
                android:onClick="wHomeClick"
                android:textSize="12sp"
                android:layout_width="150dp"
                android:layout_height="32dp" />
            <EditText
                android:id="@+id/et_stockSearch_partCode"
                android:layout_alignTop="@id/tv_stockSearch_whome"
                android:layout_toRightOf="@id/bn_stockSearch_whome"
                android:hint="物料编码"
                android:textSize="12sp"
                android:layout_width="120dp"
                android:layout_height="36dp" />
            <Button
                android:id="@+id/bn_stockSearch_search"
                android:layout_alignLeft="@id/bn_stockSearch_whome"
                android:text="搜 索"
                android:onClick="search"
                android:layout_below="@id/tv_stockSearch_whome"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0.6dp"
                android:layout_alignParentBottom="true"
                android:background="#cccccc"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0.6dp"
                android:background="#cccccc"/>
        </LinearLayout>
        <ListView
            android:id="@+id/lv_stockSearch_result"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </ListView>
    </com.library.StickHeaderViewPager>

</RelativeLayout>
