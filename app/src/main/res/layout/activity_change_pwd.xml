<?xml version="1.0" encoding="utf-8"?>
<TableLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/bg_Gray"
    tools:context="com.yanz.machine.shinva.Setting.ChangePWDActivity">
    <TableRow>
        <TextView
            android:text="用户名"
            android:textSize="20dp"
            android:textColor="@color/tv_Black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="text"
        />
        <EditText
            android:id="@+id/et_changePWD_code"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:textColor="@color/main_black"
            android:inputType="text"
        />
    </TableRow>
    <!--输入密码的行-->
    <TableRow>
        <TextView
            android:text="密码"
            android:textSize="20dp"
            android:textColor="@color/tv_Black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <EditText
            android:text=""
            android:id="@+id/et_changePWD_password"
            android:textColor="@color/main_black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"/>
    </TableRow>
    <!--输入密码的行-->
    <TableRow>
        <TextView
            android:text="新密码"
            android:textSize="20dp"
            android:textColor="@color/tv_Black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <EditText
            android:text=""
            android:id="@+id/et_changePWD_newPWD"
            android:textColor="@color/main_black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"/>
    </TableRow>
    <TableRow>
        <TextView
            android:text="密码确认"
            android:textSize="20dp"
            android:textColor="@color/tv_Black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <EditText
            android:text=""
            android:id="@+id/et_changePWD_newPWD_check"
            android:textColor="@color/main_black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"/>
    </TableRow>

    <!--定义登陆，取消按钮-->
    <LinearLayout android:orientation="horizontal"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:gravity="center">


        <Button
            android:id="@+id/bt_changePWD_submit"
            android:text="更改"
            android:onClick="change"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>



</TableLayout>
